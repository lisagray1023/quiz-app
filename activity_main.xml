<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/global_languages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/quiz_title"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/question_one" />

        <RadioGroup
            android:id="@+id/question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_one_option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one_answer_one" />

            <RadioButton
                android:id="@+id/question_one_option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one_answer_two" />

            <RadioButton
                android:id="@+id/question_one_option_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one_answer_three" />

            <RadioButton
                android:id="@+id/question_one_option_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one_answer_four" />

            <RadioButton
                android:id="@+id/question_one_option_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one_answer_five" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/question_two" />

        <CheckBox
            android:id="@+id/question_two_option_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_one" />

        <CheckBox
            android:id="@+id/question_two_option_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_two" />

        <CheckBox
            android:id="@+id/question_two_option_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_three" />

        <CheckBox
            android:id="@+id/question_two_option_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_four" />

        <CheckBox
            android:id="@+id/question_two_option_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_five" />

        <CheckBox
            android:id="@+id/question_two_option_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_six" />

        <CheckBox
            android:id="@+id/question_two_option_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_seven" />

        <CheckBox
            android:id="@+id/question_two_option_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_option_eight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/question_three" />

        <EditText
            android:id="@+id/question_three_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/question_three_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/question_four" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_four_answer_one" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_four_answer_two" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_four_answer_three" />

            <RadioButton
                android:id="@+id/question_four_option_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_four_answer_four" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_four_answer_five" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/question_four_bonus" />

        <EditText
            android:id="@+id/question_four_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/question_four_bonus_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/question_five" />

        <CheckBox
            android:id="@+id/question_five_option_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_one" />

        <CheckBox
            android:id="@+id/question_five_option_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_two" />

        <CheckBox
            android:id="@+id/question_five_option_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_three" />

        <CheckBox
            android:id="@+id/question_five_option_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_four" />

        <CheckBox
            android:id="@+id/question_five_option_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_five" />

        <CheckBox
            android:id="@+id/question_five_option_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_six" />

        <CheckBox
            android:id="@+id/question_five_option_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_five_option_seven" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="gradeQuiz"
            android:text="@string/submit_answers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keep_trying"
            android:textStyle="italic"/>


    </LinearLayout>
</ScrollView>
